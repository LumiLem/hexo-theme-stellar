.tag-plugin.live-photo {
  position: relative;
  overflow: hidden;
  border-radius: $border-image;;
  max-width: min(400px, 100%);
  height: auto !important;
  margin: 1em auto;
  container-type: inline-size;
  
  .container {
    position: absolute;
    width: 100%;
    height: 100%;
    
    img, video {
      position: absolute;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: opacity 1s ease, transform 1s ease, z-index 0.5s ease;
      z-index: 1;
    }
    
    img {
      z-index: 2;
    }
    
    video {
      transition: transform 1s ease, z-index 0.5s ease;
    }
  }
  
  &.zoom {
    .container {
      img, video {
        transform: scale(1.1);
      }
      img {
        opacity: 0;
        z-index: 1;
      }
      video {
        z-index: 2;
      }
    }
    .icon img {
      animation: spin 5s linear infinite;
    }
  }
  
  .icon {
    display: inline-flex;
    align-items: center;
    padding: 2px;
    border-radius: $border-image;
    position: relative;
    left: 10px;
    top: 10px;
    height: 22px;
    background-color: rgba(240, 255, 255, 0.6705882353);
    cursor: pointer;
    user-select: none;
    z-index: 2;
    
    img {
      width: 22px;
      height: 22px;
    }
    
    span {
      padding: 3px;
      color: #606060;
      font-size: 80%;
    }
  }
  
  @container (max-width: 200px) {
    .icon span {
      display: none;
    }
  }
  
  .warning {
    padding: 4px 6px;
    margin: 10px;
    color: #9a6700;
    border-radius: $border-image;;
    position: absolute;
    left: 0;
    top: 40px;
    background-color: rgba(240, 255, 255, 0.6705882353);
    transition: opacity 0.5s linear;
    opacity: 0;
    z-index: 10;
    
    &.show {
      opacity: 1 !important;
      display: inline-block !important;
    }
  }
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}