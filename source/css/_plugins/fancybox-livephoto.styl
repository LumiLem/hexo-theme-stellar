/**
 * Stellar 主题 Fancybox 实况照片样式
 * 基于 Ech0 项目的 Fancybox 实况照片功能实现
 */

/* 1. Fancybox 容器适配 */
.fancybox__slide.has-livephoto
  --f-html-bg: transparent
  --f-html-color: inherit
  --f-carousel-slide-padding: 64px 24px 24px

.has-livephoto .fancybox__content,
.has-livephoto .f-html
  background: transparent !important
  background-color: transparent !important
  padding: 0 !important
  border-radius: 8px !important
  overflow: visible !important
  box-shadow: none !important

/* 2. 实况照片媒体容器 */
.fancybox-livephoto-container
  position: relative
  display: flex !important
  align-items: center
  justify-content: center
  width: 100%
  height: 100%
  margin: 0 auto
  background: transparent !important

.fancybox-livephoto-container .livephoto-content
  position: relative
  display: inline-grid
  grid-template-areas: "media-stack"
  vertical-align: middle
  width: auto
  height: auto
  max-width: 100%
  max-height: 100%
  border-radius: 8px
  overflow: hidden
  background: transparent
  transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1)
  -webkit-mask-image: -webkit-radial-gradient(white, black)
  backface-visibility: hidden
  -webkit-backface-visibility: hidden
  transform: scale(1)

/* 3. 图片与视频布局 */
.fancybox-livephoto-container .livephoto-content img,
.fancybox-livephoto-container .livephoto-content video
  grid-area: media-stack
  display: block
  max-width: 100%
  max-height: 80vh
  width: auto
  height: auto
  object-fit: contain
  border-radius: 8px

.fancybox-livephoto-container .livephoto-content img
  position: relative
  z-index: 1
  transition: opacity 0.5s ease
  user-select: none
  -webkit-user-select: none
  pointer-events: none

.fancybox-livephoto-container .livephoto-content video
  width: 100% !important
  height: 100% !important
  opacity: 0
  transition: opacity 0.5s ease, transform 0.5s ease
  z-index: 2
  pointer-events: none

/* 隐藏视频原生控件 */
.fancybox-livephoto-container .livephoto-content video::-webkit-media-controls,
.fancybox-livephoto-container .livephoto-content video::-webkit-media-controls-enclosure,
.fancybox-livephoto-container .livephoto-content video::-webkit-media-controls-panel,
.fancybox-livephoto-container .livephoto-content video::-webkit-media-controls-picture-in-picture-button
  display: none !important

/* 4. 播放状态交互 */
.fancybox-livephoto-container.zoom .livephoto-content
  transform: scale(1.03)

.fancybox-livephoto-container.zoom .livephoto-content video
  opacity: 1

.fancybox-livephoto-container.zoom .livephoto-content img
  opacity: 0

.fancybox-livephoto-container.zoom .livephoto-icon-svg
  animation: livephoto-spin 3s linear infinite

@keyframes livephoto-spin
  from
    transform: rotate(0deg)
  to
    transform: rotate(360deg)

/* 5. 实况照片控制 UI */
.fancybox-livephoto-container .livephoto-content .livephoto-control-wrapper
  position: absolute
  left: 8px
  top: 8px
  z-index: 10

.fancybox-livephoto-container .livephoto-content .livephoto-icon
  display: flex
  align-items: center
  gap: 4px
  padding: 4px 8px
  border-radius: 20px
  background: rgba(0, 0, 0, 0.5)
  backdrop-filter: blur(4px)
  -webkit-backdrop-filter: blur(4px)
  cursor: pointer
  user-select: none
  -webkit-user-select: none
  pointer-events: auto
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1)
  width: fit-content

.fancybox-livephoto-container .livephoto-content .livephoto-icon:hover
  background: rgba(0, 0, 0, 0.7)

.fancybox-livephoto-container .livephoto-content .livephoto-icon-svg
  width: 16px
  height: 16px
  color: #fff
  flex-shrink: 0

.fancybox-livephoto-container .livephoto-content .livephoto-label
  color: #fff
  font-size: 10px
  font-weight: 600
  letter-spacing: 0.5px
  white-space: nowrap

/* 下拉菜单与交互 */
.livephoto-chevron
  opacity: 0
  width: 0
  margin-left: -4px
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1)
  color: #fff
  flex-shrink: 0

@media screen and (min-width: $device-tablet + 1px)
  .livephoto-control-wrapper.show-chevron .livephoto-icon
    padding-right: 12px

  .livephoto-control-wrapper.show-chevron .livephoto-chevron
    opacity: 1
    width: 12px
    margin-left: 4px

@media screen and (max-width: $device-tablet)
  .livephoto-chevron
    opacity: 1
    width: 12px
    margin-left: 4px

  .fancybox-livephoto-container .livephoto-content .livephoto-icon
    padding-right: 12px

.livephoto-dropdown
  position: absolute
  top: 30px
  left: 0
  background: rgba(40, 40, 40, 0.85)
  backdrop-filter: blur(10px)
  -webkit-backdrop-filter: blur(10px)
  border-radius: 14px
  padding: 0
  opacity: 0
  visibility: hidden
  transform: scale(0.9)
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1)
  pointer-events: none
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.4)
  transform-origin: top left

.livephoto-control-wrapper.show-dropdown .livephoto-dropdown
  opacity: 1
  visibility: visible
  transform: scale(1)
  pointer-events: auto

.livephoto-dropdown-item
  display: flex
  align-items: center
  justify-content: space-between
  padding: 8px 12px
  border-radius: 14px
  cursor: pointer
  transition: background 0.2s ease
  color: #fff
  gap: 8px

.livephoto-dropdown-item:hover
  background: rgba(255, 255, 255, 0.1)

.dropdown-text
  font-size: 14px
  white-space: nowrap
  font-weight: 500

.dropdown-icon
  width: 18px
  height: 18px
  flex-shrink: 0

/* 6. 移动端响应式图标 */
@media screen and (max-width: $device-tablet)
  .fancybox-livephoto-container .livephoto-content .livephoto-icon
    padding: 4px 8px

  .fancybox-livephoto-container .livephoto-content .livephoto-icon-svg
    width: 14px
    height: 14px

@media screen and (max-width: $device-mobile-max)
  .fancybox-livephoto-container .livephoto-content .livephoto-icon
    padding: 3px 6px

  .fancybox-livephoto-container .livephoto-content .livephoto-label
    font-size: 9px

  .fancybox-livephoto-container .livephoto-content .livephoto-icon-svg
    width: 12px
    height: 12px